{
  "name": "Boombase",
  "version": "1.0.0",
  "description": "Base theme for Boom CMS",
  "repository": {
    "type": "git",
    "url": "git@github.com:karlbalagtey/boombase"
  },
  "author": "Karl Mark Balagtey",
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
